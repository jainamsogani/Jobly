<%- include('partials/header') %>
<head>
    <link rel="stylesheet" href="../css/style.css">
</head>

<div id="edit-job" class="container mt-3 py-5">
    <h3 class="ms-3">Edit Job</h3>

    <form action="/edit/<%= job._id %>" method="post" class="row gy-2 gx-3 mt-3 ms-2 align-items-center">
            <div class="col-lg-4 col-md-6">
                <label for="position">Position</label>
                <input type="text" class="form-control" name="position" id="position" value="<%= job.position %>" autocomplete="off">
            </div>
            <div class="col-lg-4 col-md-6">
                <label for="company">Company</label>
                <div class="input-group">
                    <div class="input-group-text"><i class="bi bi-building"></i></div>
                    <input type="text" class="form-control" name="company" id="company" value="<%= job.company %>" autocomplete="off" readonly>
                </div>
            </div>
        <div class="col-lg-4 col-md-6">
            <label for="jobLocation">Location</label>
            <div class="input-group">
            <div class="input-group-text"><i class="bi bi-geo-alt-fill"></i></div>
            <input type="text" class="form-control" name="jobLocation" id="jobLocation" value="<%= job.jobLocation %>" autocomplete="off">
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <label for="status">Status</label>
            <select class="form-select" name="status" id="status">
            
            <% if(job.status == 'Pending'){ %>
                <option value="Pending" selected>Pending</option>
            <% } else { %>
                <option value="Pending">Pending</option>
            <% } %>
            
            <% if(job.status == 'Interview'){ %>
                <option value="Interview" selected>Interview</option>
            <% } else { %>
                <option value="Interview">Interview</option>
            <% } %>

            <% if(job.status == 'Declined'){ %>
                <option value="Declined" selected>Declined</option>
            <% } else { %>
                <option value="Declined">Declined</option>
            <% } %>
            </select>
        </div>
        <div class="col-lg-4 col-md-6">
            <label for="job-type">Job-Type</label>
            <select class="form-select" name="jobType" id="job-type">
            <% if(job.jobType == 'Full-Time'){ %>
                <option value="Full-Time" selected>Full-Time</option>
            <% } else { %>
                <option value="Full-Time">Full-Time</option>
            <% } %>

            <% if(job.jobType == 'Internship'){ %>
                <option value="Internship" selected>Internship</option>
            <% } else { %>
                <option value="Internship">Internship</option>
            <% } %>

            <% if(job.jobType == 'Remote'){ %>
                <option value="Remote" selected>Remote</option>
            <% } else { %>
                <option value="Remote">Remote</option>
            <% } %>

            <% if(job.jobType == 'Part-Time'){ %>
                <option value="Part-Time" selected>Part-Time</option>
            <% } else { %>
                <option value="Part-Time">Part-Time</option>
            <% } %>

            <% if(job.jobType == 'Contract'){ %>
                <option value="Contract" selected>Contract</option>
            <% } else { %>
                <option value="Contract">Contract</option>
            <% } %>
            </select>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        </form>

</div>

<%- include('partials/footer') %>